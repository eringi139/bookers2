<div class="box">
<!DOCTYPE html>
<html>
<head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/caae059452.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-sm">
    <nav class="navbar navbar-expand-md navbar-dark text-white bg-dark ">

    <span>Bookers</span>


    <ul class= "navbar-nav ml-auto" >
      <% if user_signed_in? %>

    <li><%= link_to @user_path, class:"nav-link text-light" do %>
          <i class="fas fa-home"></i>Home
        <% end %>
    </li>
    <li><%= link_to users_path, class:"nav-link text-light" do %>
          <i class="fa-solid fa-link"></i>User
        <% end %>
    </li>
    <li><%= link_to books_path, class:"nav-link text-light" do %>
          <i class="fa-solid fa-user-plus"></i>Books
         <% end %>
    </li>
    <li><%= link_to destroy_user_session_path, method: :delete, class:"nav-link text-light" do %>
          <i class="fa-solid fa-right-to-bracket"></i>Log out
         <% end %>
    </li>

    <% else %>
    <li><%= link_to root_path, class:"nav-link text-light" do %>
          <i class="fa-solid fa-house"></i>Home
          <% end %>
    </li>
    <li><%= link_to about_path, class:"nav-link text-light" do %>
          <i class="fa-solid fa-link"></i>About
          <% end %>
    </li>
    <li><%= link_to "/users/sign_up", class:"nav-link text-light" do %>
          <i class="fa-solid fa-user-plus"></i>Sign up
          <% end %>
    </li>
    <li><%= link_to "/users/sign_in", class:"nav-link text-light" do %>
          <i class="fa-solid fa-right-to-bracket"></i>Log in
          <% end %>
    </li>

   

    <% end %>
    </ul>
    </nav>
    </div>

   </header>


  <main>
  <div>
      <% flash.each do |message_type, message| %>
      <div class="flash-message <%= message_type %>"><%= message %></div>
    <% end %>
    </div>
    <%= yield %>
    </main>

    <footer>
    <div class='container'>
    <div class='row'>
    <div class='col-xs-3 col-xs-offset-9'>
    <p>CopyRight Infratop.inc</p>
    </div>
    </div>
    </div>
  </footer>
  </body>
</html>
