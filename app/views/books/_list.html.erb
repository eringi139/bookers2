<%#一覧画面から同一ページ内で詳細画面に偏移させたいが... %>

<p><%= link_to "プロフィール編集",edit_user_path(@user.id) %></p>
<%#一覧画面 %>
<% books.each do |book| %>
<div>
  <%= link_to books_path do %>
  <% end %>
  
  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
    
    <p><%=link_to book.title, book_path(book.id)%></p>
    <p><%= book.body %></p>
  </div>
  <% end %>
  
  <%#投稿画面 %>
  <%= form_with model: @book do |f| %>
  
<h1>New book</h1>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_field :body %>
  <nav>
  <%= f.submit 'Create Book' %>
  </nav>
<% end %>



