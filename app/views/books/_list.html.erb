

<div class= "col-md-3">
<h2>User info</h2>
<table>

  <p><%= image_tag @user.get_profile_image(100,100) %></p>

  <tr><th><h4>name</h4></th>
   <th><%= @user.name %></th></tr>

  <tr><th><h4>introduction</h4></th>
  <th><%= @user.introduction %></th></tr>
  <tr><th><%= link_to edit_user_path(@user.id), class:"nav-link" do %>
  <i class="fa-solid fa-user-gear"></i>
  <% end %>
  </th></tr>
  </table>

  <%#投稿画面 %>
  <%= form_with model: @book do |f| %>

<h1>New book</h1>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_field :body %>
  <nav>
  <%= f.submit 'Create Book' %>
  </nav>
<% end %>
</div>



