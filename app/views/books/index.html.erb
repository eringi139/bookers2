<h2>Book detail</h2>


<% @books.each do |book| %>
<div>
    <%= image_tag book.get_image %>
    <p><%= book.user.name %></p>
    <p><%=link_to book.title, book_path(book.id)%></p>
    <p><%= book.body %></p>
  </div>
  <% end %>
  
  <%= form_with model: @new_book do |f| %>
<h1>New book</h1>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_field :body %>
  <%= f.submit 'Create Book' %>
<% end %>
  
  
  

  
