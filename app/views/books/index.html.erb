<h2>Book detail</h2>

<%#一覧画面から同一ページ内で詳細画面に偏移させたいが... %>
<% @books.each do |book| %>
<div>
  <%= link_to books_path(book.user_id) do %>
  <% end %>
  <p><%= image_tag 'no_image.jpg' %></p>
  <p><%= book.user.name %></p>
  <p><%= book.title %></p>
  <p><%= book.body %></p>

</div>
<% end %>




<%#一覧画面 %>
<% @books.each do |book| %>
<div>
  <%= link_to books_path(book.user_id) do %>
    <%= image_tag book.get_image %>
  <% end %>
    
    <p><%= book.user.name %></p>
    <p><%=link_to book.title, book_path(book.id)%></p>
    <p><%= book.body %></p>
  </div>
  <% end %>
  
  <%#投稿画面 %>
  <%= form_with model: @new_book do |f| %>
  
<h1>New book</h1>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_field :body %>
  <%= f.submit 'Create Book' %>
<% end %>
  
  
  

  
